<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_title_layout"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/title_bar_height"
    android:background="@color/toolbar_color"
    android:padding="@dimen/title_bar_padding" >

    <Button
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/btn_margin"
        android:background="@android:color/transparent"
        android:textColor="@android:color/white"
        android:textSize="@dimen/title_size"
        android:visibility="gone" />

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="@dimen/title_tv_width"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:paddingLeft="@dimen/title_tv_padding"
        android:paddingRight="@dimen/title_tv_padding"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/title_size" />

    <Button
        android:id="@+id/right_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="@dimen/btn_margin"
        android:background="@android:color/transparent"
        android:textColor="@android:color/white"
        android:textSize="@dimen/title_size"
        android:visibility="gone" />

    <TextView
        android:id="@+id/right_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="@dimen/btn_margin"
        android:drawablePadding="@dimen/title_bar_padding"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/title_size"
        android:visibility="gone" />
    <!--  -->

</RelativeLayout>